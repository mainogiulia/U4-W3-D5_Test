<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <persistence-unit name="unit-jpa">
        <properties>
            <!-- Configurazione del database e del server-->
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/catalogo_libreria"/>
            <!-- user del db-->
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <!-- password del db-->
            <property name="javax.persistence.jdbc.password" value="grifis"/>

            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.default_schema" value="public"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>
</persistence>